{
  "name": "@cere-ddc-sdk/core",
  "version": "0.5.0-aes",
  "description": "Core encryption module for Cere DDC SDK with built-in AES-256-CBC cipher",
  "keywords": [
    "cere",
    "ddc",
    "encryption",
    "aes",
    "aes-256",
    "cipher",
    "crypto",
    "blockchain",
    "web3"
  ],
  "author": "Cere Network",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cerebellum-Network/cere-ddc-sdk-js.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/Cerebellum-Network/cere-ddc-sdk-js#readme",
  "bugs": {
    "url": "https://github.com/Cerebellum-Network/cere-ddc-sdk-js/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./cipher": {
      "require": "./dist/cipher/index.js",
      "import": "./dist/cipher/index.mjs",
      "types": "./dist/cipher/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "docs": "typedoc --out docs src/index.ts",
    "clean": "rimraf dist coverage docs",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.5.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
